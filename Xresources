! Black + DarkGrey
*color0:  #000000
*color8:  #7f7f7f
! DarkRed + Red
*color1:  #cd0000
*color9:  #ff0000
! DarkGreen + Green
*color2:  #00cd00
*color10: #00ff00
! DarkYellow + Yellow
*color3:  #cdcd00
*color11: #ffff00
! DarkBlue + Blue
*color4:  #0000ee
*color12: #5c5cff
! DarkMagenta + Magenta
*color5:  #cd00cd
*color13: #ff00ff
!DarkCyan + Cyan (both not tango)
*color6:  #00cdcd
*color14: #00ffff
! LightGrey + White
*color7:  #e5e5e5
*color15: #ffffff

! Window background color, opaqueness percentage enclosed in brackets
URxvt.background: [80]#000000
! Window foreground color
URxvt.foreground: #ffffff
! The cursor color
URxvt.cursorColor: #e5e5e5
! Fonts to be used
URxvt.font: xft:Hack:style=Regular:size=11
URxvt.boldFont: xft:Hack:style=Bold:size=11
URxvt.italicFont: xft:Hack:style=Italic:size=11
URxvt.boldItalicFont: xft:Hack:style=Bold Italic:size=11
! Turn off scrollbar
URxvt.scrollBar: false
! Tighten up the letter spacing
URxvt.letterSpace: -1
! Find a visual with the given bit depth (for transparency)
URxvt.depth: 32
! Fade the text by the given percentage when focus is lost
URxvt.fading: 30
! Save <number> lines in the scrollback buffer
URxvt.saveLines: 8192
! Perl extensions
URxvt.perl-ext:
URxvt.perl-ext-common: keyboard-select,resize-font
! Keybindings
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keyboard-select.clipboard: true
